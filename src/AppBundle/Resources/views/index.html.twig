{% extends 'AppBundle::base.html.twig' %}

{% block content %}
<div class="container">

    <div class="jumbotron">
        <h1>Placeholder Service</h1>
        <p>Quick and Simple</p>
    </div>

    <div class="row">
        <div class="col-sm-12 col-md-6">
            <h2>Description Title</h2>
            <p>Here is some text describing the service</p>
            <h3>Three simple steps</h3>
            <ul>
                <li>First step</li>
                <li>Second step</li>
                <li>Third step</li>
            </ul>
        </div>
        <div class="col-sm-12 col-md-6 text-center">
            <div class="col-xs-12">
                <div class="thumbnail">
                    {% set query = url('get-placeholder', {'text': 'Placeholder Example of size 500x300', 'height': 300, 'width': 500, 'color': '6FBCFF', 'font-color': '555'}) %}
                    <img src="{{ query }}">
                    <div class="caption">
                        <h3>We created this image</h3>
                        <p>And we used the following query to create it</p>
                        <pre>{{ query }}</pre>
                    </div>
                </div>
            </div>
            <div class="col-xs-6">
                <div class="thumbnail">
                    {% set query = url('get-placeholder', {'text': 'I\'m smaller, just 300x150', 'height': 150, 'width': 300, 'color': 'B30000', 'font-color': 'CCC', 'font-size': 14}) %}
                    <img src="{{ query }}">
                    <div class="caption">
                        <h3>Need a different size?</h3>
                        <p>Simply change a few query parameters</p>
                        <pre>{{ query }}</pre>
                    </div>
                </div>
            </div>
            <div class="col-xs-6">
                <div class="thumbnail">
                    {% set query = url('get-placeholder', {'text': 'Add more colors', 'height': 150, 'width': 300, 'color': 'CFFFBD', 'font-color': 'E014ED'}) %}
                    <img src="{{ query }}">
                    <div class="caption">
                        <h3>These are not all color we know of!</h3>
                        <p>Again, couldn't be easier.</p>
                        <pre>{{ query }}</pre>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}